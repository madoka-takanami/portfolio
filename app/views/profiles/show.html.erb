<% content_for(:title, (t '.title')) %>
<div class="flex justify-center">
  <table class="table mt-5">
      <tr>
        <th class="text-sm m-1"><%= t(User.human_attribute_name(:avator)) %></th>
          <td>
            <div class="avatar">
              <div class="w-24 rounded-xl">
                <%= image_tag current_user.avatar.url %>
              </div>
            </div>
          </td>
      </tr>

      <tr>
        <th class="text-sm m-1"><%= t(User.human_attribute_name(:email)) %></th>
        <td><%= current_user.email %></td>
      </tr>

      <tr>
        <th class="text-sm m-1"><%= t(User.human_attribute_name(:name)) %></th>
        <td><%= current_user.name %></td>
      </tr>

      <tr>
        <th class="text-sm m-1"><%= t(User.human_attribute_name(:generation)) %></th>
        <td><%= current_user.generation_i18n %></td>
      </tr>

      <tr>
        <th class="text-sm m-1"><%= t(User.human_attribute_name(:introduction)) %></th>
        <td><p class="coment"><%= current_user.introduction %></p></td>
      </tr>
  </table>
</div>

  <div class="flex justify-center mt-5" >
    <%= link_to (t 'defaults.edit'), edit_profile_path, class: 'btn btn-primary btn-wide' %>
  </div>
