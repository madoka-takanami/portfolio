<div class="flex justify-center flex-wrap mt-10 mb-7">
  <div class="avatar">
    <div class="w-24 rounded-xl">
        <%= image_tag ("#{@restaurant.rst_type}.png") %>
      </div>
    </div>
  </div>
<div class="flex justify-center flex-wrap" >
  <table class="table">
    <tr>
        <th><%= Restaurant.human_attribute_name(:rst_name) %></th>
        <td><%= @restaurant.rst_name %></td>
    </tr>
    <tr>
        <th><%= Restaurant.human_attribute_name(:place) %></th>
        <td><%= @restaurant.place %></td>
    </tr>
    <tr>
        <th><%= Restaurant.human_attribute_name(:feature)%></th>
        <td><%= @restaurant.feature %></td>
    </tr>
    <tr>
        <th><%= Restaurant.human_attribute_name(:memo) %></th>
        <td><%= @restaurant.memo %></td>
    </tr>
    </table>
</div>

  <div class="flex justify-center flex-wrap" >
    <% if logged_in? && current_user.own?(@restaurant) %>
      <%= link_to (t '.edit'), edit_restaurant_path(@restaurant.id), class: "btn btn-primary m-2" %>
      <%= button_to (t '.delete'), restaurant_path(@restaurant.id), method: :delete, class: "btn btn-accent m-2" %>
    <% end %>
  </div>
