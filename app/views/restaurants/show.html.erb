<% content_for(:title, @restaurant.rst_name) %>
<div class="flex justify-center flex-wrap mt-10 mb-7">
  <div class="avatar">
    <div class="w-24 rounded-xl">
        <%= image_tag ("#{@restaurant.rst_type}.png") %>
      </div>
    </div>
  </div>
    <div class="flex w-full mb-1 justify-center">
        <%= @restaurant.place %>
    </div>
    <div class="flex w-full mb-5 justify-center">
        <%= @restaurant.rst_name %>
    </div>
    <div class="flex w-full mb-5 justify-center">
        <%= @restaurant.feature %>
    </div>
    <div class="flex w-full mb-10 justify-center">
        <div class="rst-memo"><%= @restaurant.memo %></div>
    </div>

  <div class="flex justify-center flex-wrap" >
    <% if logged_in? && current_user.own?(@restaurant) %>
      <%= link_to (t 'defaults.edit'), edit_restaurant_path(@restaurant.id), class: "btn btn-primary m-2" %>
      <%= button_to (t '.delete'), restaurant_path(@restaurant.id), method: :delete, class: "btn btn-accent m-2" %>
    <% end %>
  </div>
