<% if @restaurants.find_by(user_id: current_user.id) == nil %>
  <%= search_form_for @other_list, as: :other do |f| %>
  <%= f.search_field :rst_name_cont, class: "input input-bordered w-full max-w-xs" %>
  <%= f.submit class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= search_form_for @my_list do |f| %>
  <%= f.search_field :rst_name_cont, class: "input input-bordered w-full max-w-xs" %>
  <%= f.submit class: 'btn' %>
  <% end %>
<% end %>
