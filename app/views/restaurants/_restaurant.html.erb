<table class="table table-fixed w-full">
  <div class="flex justify-center border-dashed border border-primary-focus">
    <tr data-href="<%= restaurant_path(restaurant.id) %>">
      <td>
        <div class="flex items-center">
          <div class="avatar">
            <div class="w-12 rounded-xl">
              <% if restaurant.rst_type %>
                <%= image_tag "#{restaurant.rst_type}.png", alt: t('default.picture') %>
              <% else %>
                <%= image_tag "default.png", alt: t('default.picture') %>
              <% end %>
            </div>
          </div>
        </div>
      </td>

      <td>
        <div class="text-sm opacity-90 mb-1.5 mr-0 max_11"><%= restaurant.place %></div>
        <div class="font-bold text-lg max_11"><%= restaurant.rst_name %></div>
        <span class="badge badge-ghost badge-sm mb-2 max_11">
          <%= restaurant.feature %>
        </span>
          <p class="text-xs max_11">マイメモ: <%= restaurant.memo %></p>
      </td>

      <td></td>
      <td>
        <div class="btn btn-outline">
          <% if logged_in? && current_user.own?(restaurant) %>
            <%= link_to (t 'restaurants.index.show'), restaurant_path(restaurant.id) %>
          <% else %>
            <%= link_to (t 'restaurants.index.show'), others_restaurant_path(restaurant.id) %>
          <% end %>
        </div>
      </td>
    </tr>
  </div>
</table>
