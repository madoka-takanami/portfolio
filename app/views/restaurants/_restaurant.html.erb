<div class="overflow-x-auto w-full">
  <table class="table w-full sample">
    <!-- head -->
    <!--
    <thead>
      <tr>
        <th colspan="5">Restaurants</th>
      </tr>
    </thead>
    <tbody>
    -->
      <!-- row 1 -->
    <tr data-href="<%= restaurant_path(restaurant.id) %>">
        <td>
          <div class="flex items-center space-x-3">
            <div class="avatar">
              <div class="mask mask-squircle w-12 h-12">
                <% if restaurant.rst_type %>
                  <%= image_tag "#{restaurant.rst_type}.png", alt: t('default.picture') %>
                <% else %>
                  <%= image_tag "default.png", alt: t('default.picture') %>
                <% end %>
              </div>
            </div>
          <div>
        </td>
        <td><div class="text-xs opacity-90"><%= restaurant.place %></div></td>
        <td><div class="font-bold"><%= restaurant.rst_name %></div></td>
        <td>
          <span class="badge badge-ghost badge-sm">
            <%= restaurant.feature %>
          </span>
        </td>
        <td>
          <div class="text-xs" >
            <%= restaurant.memo %>
          </div>
        </td>
        <td>
          <% if logged_in? && current_user.own?(restaurant) %>
            <%= link_to (t 'restaurants.index.show'), restaurant_path(restaurant.id) %>
          <% else %>
            <%= link_to (t 'restaurants.index.show'), others_restaurant_path(restaurant.id) %>
          <% end %>
        </td>
      </tr>
  </table>
</div>
