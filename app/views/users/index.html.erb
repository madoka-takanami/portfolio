<div class="flex justify-center">
  <table class="table">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <tr>
          <td>
            <div class="avatar">
              <div class="rounded-full w-12 ring">
                <%= image_tag user.avatar.url, alt: t('.icon') %>
              </div>
            </div>
          </td>

            <td>
              <div class="flex flex-row place-content-between">
                <div class="font-bold text-lg"><%= user.name %></div>
                <div class="cell text-xs"><%= user.generation_i18n %></div>
              </div>
            <p class="coment"><%= user.introduction %></p>
                <div class="flex flex-row mt-2">
                  <%= link_to (t 'defaults.show'), user_path(user.id), class: "btn btn-secondary btn-sm btn-mid mr-1" %>
                  <%= render 'follow_button', user: user %>
                </div>
            </td>
        </tr>
      <% end %>
    <% else %>
      <p><%= t('.not_registed') %></p>
    <% end %>
  </table>
</div>
