
  <%= render 'follow_button', user: @user %>

  <div class="avatar">
    <div class="w-24 rounded-xl ring">
      <% if @user.avatar.present? %>
        <%= @user.avatar %>
      <% else %>
        <%= image_tag "pose_pien_uruuru_woman", alt: t('.icon') %>
      <% end %>
    </div>
  </div>
  <div class="font-bold"><%= @user.name %></div>
  <div><%= @user.generation_i18n %></div>
  <span><%= @user.introduction %></span>

<p><%= "#{@user.name}のマイレストラン" %></p>
  <% if @restaurants.any? %>
    <% @restaurants.each do |restaurant| %>
      <%= render 'restaurants/restaurant', restaurant: restaurant %>
      <%= render 'restaurants/visit_button', restaurant: restaurant %>
    <% end %>
  <% else %>
    <p><%= t('.not_registed') %></p>
  <% end %>
