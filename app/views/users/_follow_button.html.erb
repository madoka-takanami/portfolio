<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= button_to 'フォローを外す', user_relationship_path(user.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= button_to 'フォローする', user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>
