<% if current_user != user %>
  <% if current_user.following?(user) %>
      <%= button_to 'マーク済み', user_relationship_path(user.id, current_user.id), method: :delete, class: "btn btn-sm btn-secondary" %>
  <% else %>
      <%= button_to 'マークする', user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-accent" %>
  <% end %>
<% end %>
