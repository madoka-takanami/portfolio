<h1><%= (t '.signup') %></h1>

<div class="form-control w-full max-w-xs" >
  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/error_message', object: f.object %>

    <label class="label">
      <span class="label-text"><%= f.label :name %></span>
    </label>
    <%= f.text_field :name, placeholder: "nickname",  class: "input input-bordered w-full max-w-xs" %>

    <label class="label">
      <span class="label-text"><%= f.label :email %></span>
    </label>
    <%= f.text_field :email, placeholder: "e@mail.com",  class: "input input-bordered w-full max-w-xs" %>

    <label class="label">
      <span class="label-text"><%= f.label :generation %></span>
    </label>
    <%= f.select :generation, User.generations_i18n.invert, {}, class: "select select-bordered w-full max-w-xs" %>

    <label class="label">
      <span class="label-text"><%= f.label :password %></span>
    </label>
    <%= f.text_field :password, placeholder: "password",  class: "input input-bordered w-full max-w-xs" %>

    <label class="label">
      <span class="label-text"><%= f.label :password_confirmation %></span>
    </label>
    <%= f.text_field :password_confirmation, placeholder: "password",  class: "input input-bordered w-full max-w-xs" %>
  <br>
  <br>
  <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
  <% end %>
</div>
<br>
<%= link_to (t '.to_login_page'), login_path, class: "link link-secondary" %>
