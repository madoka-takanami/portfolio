<% content_for(:title,(t '.title')) %>

<div class="flex justify-center">
  <div class="form-control w-full max-w-xs media" >

  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/error_message', object: f.object %>

      <label class="label">
        <span class="label-text"><%= f.label :name %></span>
      </label>
      <%= f.text_field :name, placeholder: "nickname",  class: "input input-bordered w-full max-w-xs mb-2" %>

    <label class="label align-item">
      <span class="label-text"><%= f.label :email %></span>
    </label>
    <%= f.text_field :email, placeholder: "e@mail.com",  class: "input input-bordered w-full max-w-xs mb-2" %>

    <label class="label">
      <span class="label-text"><%= f.label :generation %></span>
    </label>
    <%= f.select :generation, User.generations_i18n.invert, {}, class: "select select-bordered w-full max-w-xs mb-2" %>

    <label class="label">
      <span class="label-text"><%= f.label :password %></span>
    </label>
    <%= f.text_field :password, placeholder: "password",  class: "input input-bordered w-full max-w-xs md-2" %>

    <label class="label">
      <span class="label-text"><%= f.label :password_confirmation %></span>
    </label>
    <%= f.text_field :password_confirmation, placeholder: "password",  class: "input input-bordered w-full max-w-xs md-2" %>

    <div class="flex justify-center mt-5">
      <%= f.submit (t 'defaults.register'), class: 'btn btn-primary btn-mid' %>
    <% end %>
    </div>
  </div>
</div>
<%= link_to (t '.to_login_page'), login_path, class: "link link-primary media flex justify-center mt-5" %>
